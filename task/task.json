{
    "id": "79e0d24a-97b1-4cac-bcd5-398429dc44b0",
    "name": "Tagging",
    "friendlyName": "Tagging",
    "description": "Tag your pipelines, releases and git commits.",
    "helpMarkDown": "[More information](https://github.com/JoostVoskuil/azure-devops-tagging)",
    "category": "Utility",
    "visibility": [
        "Build",
        "Release"
    ],
    "author": "Joost Voskuil (joost@foxhole.nl)",
    "version": {
        "Major": 0,
        "Minor": 0,
        "Patch": 1
    },
    "inputs": [
        {
            "name": "tagtype",
            "type": "picklist",
            "label": "Tag type",
            "defaultValue": "build",
            "required": true,
            "options": {
                "build": "Pipeline",
                "release": "Release",
                "git": "Git"
            },
            "helpMarkDown": "Specify the tag type you want to add."
        },
        {
            "name": "tags",
            "type": "string",
            "label": "Tag(s) to be added",
            "helpMarkDown": "Seperate tags with a ','.",
            "required": true
        },
        {
            "name": "message",
            "type": "string",
            "label": "Git tag message",
            "helpMarkDown": "Message for git tagging.",
            "required": true,
            "visibleRule": "tagtype=git || tagtype=release && taggitartifacts=true"
        },
        {
            "name": "tagbuild",
            "type": "boolean",
            "label": "Tag build/pipeline",
            "helpMarkDown": "Check if yo",
            "required": true
        },
        {
            "name": "tagbuildartifacts",
            "type": "boolean",
            "label": "Tag used Build Artifacts",
            "helpMarkDown": "Check if you want to tag all build artifacs referenced by this release.",
            "required": true,
            "visibleRule": "tagtype=release"
        },
        {
            "name": "taggitartifacts",
            "type": "boolean",
            "label": "Tag used Git Artifacts",
            "helpMarkDown": "Check if you want to tag all git artifacs referenced by this release.",
            "required": true,
            "visibleRule": "tagtype=release"
        }
    ],
    "execution": {
        "Node10": {
            "target": "index.js"
        }
    }
}